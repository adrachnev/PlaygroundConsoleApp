<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:WpfApp1"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TestDataContext/>
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="ListBoxDragDrop" TargetType="{x:Type ListBoxItem}">
            <Setter Property="AllowDrop" Value="true"/>
            <EventSetter Event="PreviewMouseMove" Handler="listboxItem_PreviewMouseMoveEvent"/>           
            <EventSetter Event="GiveFeedback" Handler="listboxItem_GiveFeedback"/>
        </Style>
    </Window.Resources>

    <StackPanel>


        <uc:Terminal HorizontalContentAlignment="Stretch" 
                     Modules="{Binding Devices, Mode=TwoWay}" 
                     SelectedModule="{Binding SelectedDevice, Mode=TwoWay}"
                     PasteCommand="{Binding PasteDevice, Mode=TwoWay}"
                     DoubleClickCommand="{Binding DoubleClickDevice, Mode=TwoWay}"/>
        
        <Button Content="Add device" Command="{Binding AddDevice}"/>
        <ListBox ItemsSource="{Binding CatalogItems}" DisplayMemberPath="OrderCode" ItemContainerStyle="{StaticResource ListBoxDragDrop}"/>
    </StackPanel>
</Window>
