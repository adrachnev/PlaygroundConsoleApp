<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:WpfApp1"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:TestDataContext/>
    </Window.DataContext>

    <StackPanel>


        <uc:Terminal HorizontalContentAlignment="Center" Modules="{Binding Devices, Mode=TwoWay}" SelectedModules="{Binding SelectedDevices, Mode=TwoWay}"/>
        <Button Content="Add device" Command="{Binding AddDevice}"/>
    </StackPanel>
</Window>
