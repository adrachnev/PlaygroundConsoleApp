<UserControl x:Class="WpfApp1.Terminal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uikit="http://www.festo.com/schemas/presentation/Festo_uikit/xaml"
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ListBox x:Name="listbox" 
                 HorizontalContentAlignment="Center"
                 PreviewKeyDown="listbox_PreviewKeyDown"                 
                 ItemsSource="{Binding RelativeSource={RelativeSource FindAncestor, 
                               AncestorType={x:Type local:Terminal}},
                               Path=Modules}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Viewbox 
										 Stretch="Uniform"
										 VerticalAlignment="Stretch"
										 HorizontalAlignment="Stretch"
										 >
                        <ContentPresenter VerticalAlignment="Center"
																	HorizontalAlignment="Center"
																	Content="{Binding DeviceImage}"/>
                    </Viewbox>
                </DataTemplate>

            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
