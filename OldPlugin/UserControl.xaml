<UserControl x:Class="OldPlugin.PluginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OldPlugin"
             xmlns:custom="http://www.festo.com/schemas/presentation/Festo_uikit/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Festo.Theme;component/CompleteTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <custom:FestoGroupBox Header="FestoGroupBox">

            <custom:InfoBox>
                <custom:InfoBox.Content>
                    <TextBlock Text="{Binding Text}" />
                </custom:InfoBox.Content>
            </custom:InfoBox>
            
        </custom:FestoGroupBox>
    </Grid>
</UserControl>
